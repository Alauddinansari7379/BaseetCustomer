                                    android:textColor="@color/text_color"
                                    android:textSize="12sp"
                                    android:textStyle="bold">

                                </androidx.appcompat.widget.AppCompatTextView>


                            </LinearLayout>

                         </androidx.appcompat.widget.LinearLayoutCompat>

